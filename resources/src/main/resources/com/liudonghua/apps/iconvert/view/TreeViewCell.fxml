<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox fx:id="treeViewCellContainer" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <CheckBox fx:id="treeViewCellCheckBox" mnemonicParsing="false" prefWidth="100.0" text="filePath">
         <HBox.margin>
            <Insets left="5.0" right="5.0" />
         </HBox.margin>
      </CheckBox>
      <HBox fx:id="treeViewCellDetailContainer" alignment="CENTER_LEFT">
         <children>
            <Label text="%app.main.preview_pane.tree_view.cell.source_encoding">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="treeViewCellComboSource" prefWidth="75.0">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </ComboBox>
            <Label text="%app.main.preview_pane.tree_view.cell.target_encoding">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="treeViewCellComboTarget" prefWidth="75.0">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </ComboBox>
            <ProgressBar fx:id="treeViewCellProgress" progress="0.0" visible="false">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ProgressBar>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
</HBox>
